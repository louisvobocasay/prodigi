{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "assets": [
          {
            "include": "env/**",
            "outDir": "dist/apps/api/src/",
            "watchAssets": true
          },
          {
            "include": "i18n/**",
            "outDir": "dist/apps/api/src/",
            "watchAssets": true
          }
        ]
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json",
        "assets": [
          "env/**",
          "i18n/**/*"
        ],
        "watchAssets": true
      }
    }
  }
}